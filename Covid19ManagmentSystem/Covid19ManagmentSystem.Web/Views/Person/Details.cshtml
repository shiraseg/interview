@model Covid19ManagmentSystem.Web.Models.Person

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Patient ID
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PersonId)
        </dd>
        <dt class = "col-sm-2">
            Patient first name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
           Patient last name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
           Patient birth-date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BirthDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class = "col-sm-2">
            Mobile phone
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrivatePhone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Street)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Street)
        </dd>
        <dt class="col-sm-2">
            Street number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.streetNumber)
        </dd>
        @for(var i =0; i < Model.Vaccinations.Count; i++)
        {
            <dl class="row">
                <dt class="col-sm-2">
                    Vaccine type
                </dt>
                <dd class="col-sm-10">
                    <input asp-for="@Model.Vaccinations[i].Type"  readonly />      
                </dd>
                <dt class="col-sm-2">
                    Date of vaccination
                </dt>
                <dd class="col-sm-10">   
                    <input asp-for="@Model.Vaccinations[i].Date"  readonly />
            </dl>
        }

        @for (var i = 0; i < Model.CovidStatuses.Count; i++)
        {
            <dl class="row">
                <dt class="col-sm-2">
                    Sick status start date
                </dt>
                <dd class="col-sm-10">
                    <input asp-for="@Model.CovidStatuses[i].StartDate" readonly />
                </dd>
                <dt class="col-sm-2">
                    Sick status recovery date
                </dt>
                <dd class="col-sm-10">
                    <input asp-for="@Model.CovidStatuses[i].RecoveryDate" readonly />
            </dl>
        }
        
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
